<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addUser.AddUserActivity">


    <EditText
            android:padding="8dp"
            android:hint="name"
            android:id="@+id/titlePost"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp"/>

    <EditText
            android:padding="8dp"
            android:hint="home nubmer"
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/titlePost"
            app:layout_constraintStart_toStartOf="@id/titlePost"
            app:layout_constraintTop_toBottomOf="@+id/titlePost" />
    <EditText
            android:padding="8dp"
            android:hint="work"
            android:id="@+id/work"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/titlePost"
            app:layout_constraintStart_toStartOf="@id/titlePost"
            app:layout_constraintTop_toBottomOf="@+id/home" />

    <EditText
            android:padding="8dp"
            android:hint="mobile"
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/titlePost"
            app:layout_constraintStart_toStartOf="@id/titlePost"
            app:layout_constraintTop_toBottomOf="@+id/work" />



    <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimary"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="@id/titlePost"
            app:layout_constraintStart_toStartOf="@id/titlePost"
            app:layout_constraintTop_toBottomOf="@+id/listGroup"
    />

    <android.support.v7.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/mobile"
            android:id="@+id/listGroup"
            android:layout_width="100dp"
            android:layout_height="100dp">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>